.container
  h2 New Order
  hr
  form(name="newOrderForm")
    .row
      .form-group.col-md-6
        label(for="orderName") Order Name
        input.form-control(id="orderName", type="text", placeholder="Enter name...", ng-model="order.name", required)

    table.table.table-striped.table-condensed
      thead
        tr
          th.col-md-2 Product code
          th.col-md-7 Product description
          th.col-md-2 Member price
          th.col-md-1 Quantity
      tbody
        tr(ng-repeat="product in order.products")
          td {{ product.product_code }}
          td {{ product.product_description }}
          td {{ product.member_price | currency }}
          td
            input.form-control(text="text", ng-model="product.quantity", ng-change="calcTotal()", ng-pattern="intReg")
      tfoot
        tr
          td(colspan="4") Total: {{ order.total | currency }}

    .row
      .form-group
        button.btn.btn-primary(ng-disabled="newOrderForm.$invalid", ng-click="createOrder(order)") Create order
        | &nbsp;
        a.btn.btn-default(href="/orders") Cancel
